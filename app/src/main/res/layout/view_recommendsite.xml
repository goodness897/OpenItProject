<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image_photo"
            android:layout_toRightOf="@+id/image_photo"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/text_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_title"
            android:layout_toEndOf="@+id/image_photo"
            android:layout_toRightOf="@+id/image_photo"
            android:text="Small Text"
            android:textColor="@color/color_opeprider_speedmeter_headerview"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_margin="16dp" />

        <TextView
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@color/color_openrider_search_riding_child_text"
            android:id="@+id/text_score"
            android:layout_alignBottom="@+id/text_distance"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/text_title"
            android:gravity="center"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="\@오픈라이더"
            android:id="@+id/textView5"

            android:layout_alignTop="@+id/text_distance"
            android:layout_toRightOf="@+id/text_distance"
            android:layout_toEndOf="@+id/text_distance" />


    </RelativeLayout>
</FrameLayout>